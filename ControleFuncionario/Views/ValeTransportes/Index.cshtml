@model IEnumerable<ControleFuncionario.Models.ValeTransporte>

@{
    ViewData["Title"] = "Vale Transporte";
}

<h1>Vale Transporte</h1>

<p>
    <a asp-action="Create" class="btn btn-dark"><i class="fa fa-plus fa-2" aria-hidden="true"></i> Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.NomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ValeTransporteId" class="btn btn-dark"><i class="fa fa-pencil-square-o fa-2" aria-hidden="true"></i> Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ValeTransporteId" class="btn btn-dark"><i class="fa fa-file-text-o" aria-hidden="true"></i> Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ValeTransporteId" class="btn btn-dark"><i class="fa fa-trash fa-2" aria-hidden="true"></i> Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
